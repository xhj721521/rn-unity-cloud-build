{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/modules/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@bridge/*": ["src/bridge/*"],
      "@state/*": ["src/state/*"],
      "@theme/*": ["src/theme/*"],
      "@locale/*": ["src/locale/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "jest.setup.js"],
  "exclude": ["node_modules"]
}
